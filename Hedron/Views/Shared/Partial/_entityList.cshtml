@model IEnumerable<BaseEntityViewModel>

@{
    ViewData["Title"] = "Index";
}

<table class="w3-table w3-card w3-margin-bottom w3-border w3-bordered w3-pale-blue" id="tableEntityList">
    <thead>
        <tr class="w3-lime">
            <th width="10px"></th>
            <th>
                @Html.DisplayNameFor(model => model.Prototype)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th class="w3-right-align"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entity in Model)
        {
        <tr id="room-@entity.Prototype" class="w3-white">
            <td>
                <i class="material-icons w3-hover-blue-gray w3-float-tooltip" style="vertical-align:-8px" onclick="expandEntity(@entity.Prototype)" id="chevron-@entity.Prototype">chevron_right</i>
            </td>
            <td>
                @Html.DisplayFor(modelItem => entity.Prototype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => entity.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => entity.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => entity.ShortDescription)
            </td>
            <td class="w3-right-align">
                <div class="w3-float-tooltip">
                    <a asp-controller="@entity.Type" asp-route-id="@entity.Prototype" asp-action="Edit"><i class="material-icons w3-hover-blue-gray" style="vertical-align:-8px">mode_edit</i></a>
                    <span class="w3-float-tooltiptext">Edit</span>
                </div>
                <div class="w3-float-tooltip">
                    <a asp-controller="@entity.Type" asp-route-id="@entity.Prototype" asp-action="Details"><i class="material-icons w3-hover-blue-gray w3-float-tooltip" style="vertical-align:-8px">more_horiz</i></a>
                    <span class="w3-float-tooltiptext">Details</span>
                </div>
                <div class="w3-float-tooltip">
                    <a asp-controller="@entity.Type" asp-route-id="@entity.Prototype" asp-action="Delete"><i class="material-icons w3-hover-blue-gray w3-float-tooltip" style="vertical-align:-8px">delete</i></a>
                    <span class="w3-float-tooltiptext">Delete</span>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>