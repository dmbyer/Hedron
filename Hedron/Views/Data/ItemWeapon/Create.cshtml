@using Hedron.Core
@model Hedron.Models.ItemWeaponViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>New Weapon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Parent" class="control-label"></label>
                <input asp-for="Parent" class="form-control" />
                <span asp-validation-for="Parent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tier" class="control-label"></label>
                <input asp-for="Tier" class="form-control" />
                <span asp-validation-for="Tier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LongDescription" class="control-label"></label>
                <input asp-for="LongDescription" class="form-control" />
                <span asp-validation-for="LongDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinDamage" class="control-label"></label>
                <input asp-for="MinDamage" class="form-control" />
                <span asp-validation-for="MinDamage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxDamage" class="control-label"></label>
                <input asp-for="MaxDamage" class="form-control" />
                <span asp-validation-for="MaxDamage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Behavior.Obtainable" class="control-label"></label>
                <input asp-for="Behavior.Obtainable" class="form-control" checked />
                <span asp-validation-for="Behavior.Obtainable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Behavior.Storable" class="control-label"></label>
                <input asp-for="Behavior.Storable" class="form-control" checked />
                <span asp-validation-for="Behavior.Storable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Behavior.RandomDrop" class="control-label"></label>
                <input asp-for="Behavior.RandomDrop" class="form-control" />
                <span asp-validation-for="Behavior.RandomDrop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Behavior.Bound" class="control-label"></label>
                <input asp-for="Behavior.Bound" class="form-control" />
                <span asp-validation-for="Behavior.Bound" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rarity" class="control-label"></label>
                <select asp-for="Rarity" asp-items="Html.GetEnumSelectList<ItemRarity>()" class="form-control"></select>
                <span asp-validation-for="Rarity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slot" class="control-label"></label>
                <select asp-for="Slot" asp-items="Html.GetEnumSelectList<ItemSlot>()" class="form-control"></select>
                <span asp-validation-for="Slot" class="text-danger"></span>
            </div>
            <hr />
            <h2>Damage Types</h2>
            <div class="form-group">
                <label asp-for="DamageType.Blunt" class="control-label"></label>
                <input asp-for="DamageType.Blunt" class="form-control" />
                <span asp-validation-for="DamageType.Blunt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageType.Slash" class="control-label"></label>
                <input asp-for="DamageType.Slash" class="form-control" />
                <span asp-validation-for="DamageType.Slash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageType.Pierce" class="control-label"></label>
                <input asp-for="DamageType.Pierce" class="form-control" />
                <span asp-validation-for="DamageType.Pierce" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageType.Magic" class="control-label"></label>
                <input asp-for="DamageType.Magic" class="form-control" />
                <span asp-validation-for="DamageType.Magic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageType.Spirit" class="control-label"></label>
                <input asp-for="DamageType.Spirit" class="form-control" />
                <span asp-validation-for="DamageType.Spirit" class="text-danger"></span>
            </div>
            <hr />
            <h2>Elemental Types</h2>
            <div class="form-group">
                <label asp-for="ElementalType.Acid" class="control-label"></label>
                <input asp-for="ElementalType.Acid" class="form-control" />
                <span asp-validation-for="ElementalType.Acid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalType.Air" class="control-label"></label>
                <input asp-for="ElementalType.Air" class="form-control" />
                <span asp-validation-for="ElementalType.Air" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalType.Earth" class="control-label"></label>
                <input asp-for="ElementalType.Earth" class="form-control" />
                <span asp-validation-for="ElementalType.Earth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalType.Fire" class="control-label"></label>
                <input asp-for="ElementalType.Fire" class="form-control" />
                <span asp-validation-for="ElementalType.Fire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalType.Ice" class="control-label"></label>
                <input asp-for="ElementalType.Ice" class="form-control" />
                <span asp-validation-for="ElementalType.Ice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalType.Water" class="control-label"></label>
                <input asp-for="ElementalType.Water" class="form-control" />
                <span asp-validation-for="ElementalType.Water" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
