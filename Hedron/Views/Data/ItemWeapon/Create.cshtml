@using Hedron.Core.Damage
@using Hedron.Core.Property
@model Hedron.Models.ItemWeaponViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="w3-red"></div>
    <div class="w3-card w3-third w3-margin-top w3-margin-right">
        <header class="w3-container w3-khaki">
            <h2>Create Weapon</h2>
        </header>
        <div class="w3-container w3-sand">
            <div class="w3-container w3-margin-top">
                <label asp-for="Parent"></label>
                <div>
                    <input asp-for="Parent" class="w3-animate-input" style="width:30%" />
                    <span asp-validation-for="Parent" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="Tier"></label>
                <div>
                    <input asp-for="Tier" class="w3-animate-input" style="width:30%" />
                    <span asp-validation-for="Tier" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="Name"></label>
                <div>
                    <input asp-for="Name" class="w3-animate-input" style="width:30%" />
                    <span asp-validation-for="Name" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="ShortDescription"></label>
                <div>
                    <input asp-for="ShortDescription" class="w3-animate-input" style="width:30%" />
                    <span asp-validation-for="ShortDescription" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="LongDescription"></label>
                <div>
                    <textarea asp-for="LongDescription" class="w3-animate-input" style="width:50%" rows="5" cols="1">@Model.LongDescription</textarea>
                    <span asp-validation-for="LongDescription" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="MinDamage"></label>
                <div>
                    <input asp-for="MinDamage" class="w3-animate-input" style="width:30%" />
                    <span asp-validation-for="MinDamage" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="MaxDamage"></label>
                <div>
                    <input asp-for="MaxDamage" class="w3-animate-input" style="width:30%" />
                    <span asp-validation-for="MaxDamage" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="Behavior.RandomDrop"></label>
                <div>
                    <input asp-for="Behavior.RandomDrop" style="width:30%" />
                    <span asp-validation-for="Behavior.RandomDrop" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="Behavior.Bound"></label>
                <div>
                    <input asp-for="Behavior.Bound" style="width:30%" />
                    <span asp-validation-for="Behavior.Bound" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="Rarity"></label>
                <div>
                    <select asp-for="Rarity" asp-items="Html.GetEnumSelectList<ItemRarity>()" class="form-control"></select>
                    <span asp-validation-for="Rarity" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="Slot"></label>
                <div>
                    <select asp-for="Slot" asp-items="Html.GetEnumSelectList<ItemSlot>()" class="form-control"></select>
                    <span asp-validation-for="Slot" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="DamageType"></label>
                <div>
                    <select asp-for="DamageType" asp-items="Html.GetEnumSelectList<DamageType>()" class="form-control"></select>
                    <span asp-validation-for="DamageType" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-padding-32 w3-margin-left w3-margin-right">
                <input type="submit" value="Create" class="w3-button w3-blue-gray w3-hover-black" />
            </div>
        </div>
        <div class="w3-container w3-sand">
            <div class="w3-topbar w3-margin-left w3-margin-right">
                <div class="w3-section">
                    <a asp-action="Index"><i class="material-icons">arrow_back</i></a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
