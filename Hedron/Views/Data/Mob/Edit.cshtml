                <div>
                    <input asp-for="Tier" value="@Model.Tier" class="w3-animate-input" style="width:30%" />
                    <span asp-validation-for="Tier" class="w3-red"></span>
                </div>
            </div>
            <div class="w3-container w3-margin-top">
                <label asp-for="Level"></label>
