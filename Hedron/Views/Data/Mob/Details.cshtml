@model Hedron.Models.MobViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-card w3-third w3-margin-top w3-margin-right w3-khaki">
    <div class="w3-container w3-cell-row">
        <div class="w3-cell" style="width:95%">
            <h2>Details</h2>
        </div>
        <div class="w3-float-tooltip w3-cell">
            <a asp-controller="Mob" asp-route-id="@Model.Prototype" asp-action="Edit"><i class="material-icons w3-hover-blue-gray">mode_edit</i></a>
            <span class="w3-float-tooltiptext">Edit</span>
        </div>
    </div>
    <div class="w3-container w3-sand">
        <table class="w3-table w3-section">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Prototype)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Prototype)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Parent)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Parent)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Tier)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Tier)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.DisplayFor(model => model.ShortDescription)
                </td>
            <tr>
                <td colspan="2">
                    @Html.DisplayNameFor(model => model.LongDescription)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.DisplayFor(model => model.LongDescription)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Behavior)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Behavior)
                </td>
            </tr>
        </table>
    </div>
    <div class="w3-container w3-sand">
        <div class="w3-topbar w3-margin-left w3-margin-right">
            <div class="w3-section">
                <a asp-action="Index"><i class="material-icons">arrow_back</i></a>
            </div>
        </div>
    </div>
</div>