@using Hedron.Core.Locale;
@using Hedron.Core.Entities.Living;
@using Hedron.Core.Entities.Base;


<table class="table table-striped table-bordered table-hover mw-100">
    <thead class="thead-dark">
        <tr>
            <th style="max-width:150px">Name</th>
            <th class="text-center">ID</th>
            <th class="text-center">Rooms</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var area in Areas)
        {
            <tr>
                <td class="text-truncate overflow-hidden" style="max-width:150px">
                    @area.Name
                </td>
                <td class="text-center">
                    @area.Prototype
                </td>
                <td class="text-center">
                    @area.Rooms.Count
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public List<Area> Areas { get; set; }
}
