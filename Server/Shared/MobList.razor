@using Hedron.Core.Entities.Living;
@using Hedron.Core.Entities.Base;


<table class="table table-striped table-bordered table-hover mw-100">
    <thead class="thead-dark">
        <tr>
            <th style="max-width:150px">Name</th>
            <th class="text-center">ID</th>
            <th class="text-truncate overflow-hidden" style="max-width:650px">Short Description</th>
            <th class="text-center">Tier</th>
            <th class="text-center">Level</th>
            <th class="text-center">Random</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mob in Mobs)
        {
        <tr>
            <td class="text-truncate overflow-hidden" style="max-width:150px">
                @mob.Name
            </td>
            <td class="text-center">
                @mob.Prototype
            </td>
            <td style="max-width:650px">
                @mob.ShortDescription
            </td>
            <td class="text-center">
                @mob.Tier.ToString()
            </td>
            <td class="text-center">
                @mob.Level.ToString()
            </td>
            <td class="text-center">
                TODO
            </td>
        </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public List<Mob> Mobs { get; set; }
}
