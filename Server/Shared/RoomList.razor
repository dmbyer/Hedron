@using Hedron.Core.Locale;
@using Hedron.Core.Entities.Living;
@using Hedron.Core.Entities.Base;


    <table class="table table-striped table-bordered table-hover mw-100">
        <thead class="thead-dark">
            <tr>
                <th style="max-width:150px">Name</th>
                <th class="text-center">ID</th>
                <th class="text-center">Shop</th>
                <th class="text-truncate overflow-hidden" style="max-width:650px">Description</th>
                <th class="text-center">Mobs</th>
                <th class="text-center">Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Rooms)
            {
                <tr>
                    <td class="text-truncate overflow-hidden" style="max-width:150px">
                        @room.Name
                    </td>
                    <td class="text-center">
                        @room.Prototype
                    </td>
                    <td class="text-center">
                        @room.IsShop
                    </td>
                    <td style="max-width:650px">
                        @room.Description
                    </td>
                    <td class="text-center">
                        @(room.GetAllEntities<Mob>().Count)
                    </td>
                    <td class="text-center">
                        @(room.GetAllEntities<EntityInanimate>().Count)
                    </td>
                </tr>
            }
        </tbody>
    </table>

